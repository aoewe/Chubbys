page {
	background: #F3F5F7;
}

.nav-bar {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.is_lesson {
	padding: 24rpx 18rpx;
	font-size: 24rpx;
font-family: PingFang SC;
font-weight: 400;
color: #FF4701;
}

.nav-bar .van-icon {
	font-size: 44rpx;
	color: #000000;
	padding-left: 10rpx;
	font-weight: bold;
}

.col {
	width: 30%;
}

.show_input {
	position: absolute;
	top: 40%;
	left: 3%;
	z-index: 2;
	width: 660rpx;
	height: 288rpx;
	background: #FFFFFF;
	border-radius: 16rpx;
	padding: 20rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
}

.show_btn {
	margin-top: 20rpx;
	width: 168rpx;
	height: 68rpx;
	border: 1px solid #FF4701;
	border-radius: 34rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
	color: #FF4701;
}

.placeholders {
	width: 580rpx;
	height: 104rpx;
	background: #F3F5FC;
	border-radius: 52rpx;
}

.await {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #1D1D1D;
}

.await text {
	font-size: 32rpx;
}

.await text+text {
	font-size: 26rpx;
}

.detail {
	padding: 18rpx;
}

.user-info {
	background: #ffffff;
	height: 151rpx;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
	position: relative;
}

.user-info image {
	margin: 0 24rpx;
	height: 64rpx;
	width: 64rpx;
	border-radius: 50%;
}

.user-info button {
	height: 54rpx;
	width: 164rpx;
	padding: 0;
	position: absolute;
	right: 24rpx;
	top: 50;
	transform: translateY(-50%);
}

.name-phone {
	padding-bottom: 6rpx;
}

.user-info .user-name {
	color: #333333;
	font-size: 32rpx;
	font-weight: bold;
	padding-right: 15rpx;
}

.user-info .phone {
	color: #666666;
	font-size: 24rpx;
}

.user-info .address,
.detailed-address {
	width: 580rpx;
	color: #666666;
	font-size: 26rpx;
}

.commodity-info {
	border-radius: 20rpx;
	background: #ffffff;
	width: 100%;
	padding: 24rpx 16rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.commodity-info .info {
	display: flex;
	position: relative;
}

.commodity-info .info .title-price {
	flex: 1;
	font-size: 28rpx;
}

.commodity-info .info .title-price view {
	display: flex;
	justify-content: space-between;
	padding-bottom: 16rpx;
}

.commodity-info .info .title-price view+view {
	color: #999999;
}

.commodity-info .info .title-price view+view text+text {
	font-size: 24rpx;
	color: #333333;
}

.commodity-info .info .title-price view text {
	display: block;
}

.commodity-name {
	width: 370rpx;
	font-weight: bold;
	color: #1D1D1D;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}

.commodity-name+text {
	color: #333333;
}

.commodity-info .image {
	height: 180rpx;
	width: 180rpx;
	margin-right: 20rpx;
	overflow: hidden;
}

.commodity-info .image image {
	width: 100%;
	height: 100%;
	border-radius: 12rpx;
}


.refund_btn {
	display: flex;
	justify-content: center;
	width: 130rpx;
	height: 50rpx;
	border: 1px solid #666666;
	border-radius: 30rpx;
	color: #999999;
}

.refund_flex {
	display: flex;
	justify-content: space-between;
	background: #ffffff;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	display: flex;
	align-items: center;
	position: relative;
	padding: 31rpx 21rpx;
}

.refund_type {
	font-size: 36rpx;
	font-family: PingFang SC;
	font-weight: bold;
	color: #FF4701;
}

.refund_time {
	margin-top: 11rpx;
	font-size: 24rpx;
	font-family: PingFang SC;
	font-weight: bold;
	color: #666666;
}

.refund_money {
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 500;
	color: #FF4701;
}

.refund_money text {
	font-size: 36rpx;
}

.refund_input {
	font-size: 32rpx;
	font-family: PingFang SC;
	font-weight: 500;
	text-decoration: underline;
	color: #FF4701;
}

.Recipient {
	width: 48rpx;
	height: 52rpx;
	margin: 65rpx 0rpx;
	margin-right: 32rpx;
}

.refund_address {
	width: 690rpx;
	/* height: 382rpx; */
	background: #FFFFFF;
	border-radius: 20rpx;
	margin-bottom: 20rpx;
	/* display: flex; */
	/* align-items: center; */
	position: relative;
	padding: 21rpx 21rpx;
}

.refund_bottom {
	position: relative;
	left: 64%;
	text-align: center;
	width: 234rpx;
	height: 96rpx;
	border: 2px solid #999999;
	border-radius: 4rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
	color: #333333;
}

.refund_bottom span {
	font-size: 24rpx;
	font-family: PingFang SC;
	font-weight: 400;
	color: #333333;
}


.refund_addw {
	width: 586rpx;
	font-size: 28rpx;
	font-family: PingFang SC;
	font-weight: 400;
	color: #333333;
}

.refund_inflex {
	display: flex;
	height: 191rpx;
	/* align-items: center; */
}

.refund_address_flex {
	display: flex;
	justify-content: space-between;
	margin-bottom: 19rpx;
}

.payment {
	margin-top: 10rpx;
	display: flex;
	justify-content: flex-end;
	align-items: center;
}

.payment_btn {
	display: flex;
	justify-content: flex-end;
	align-items: center;
}

.payment text,
.payment .money text {
	color: #999999;
	font-size: 28rpx;
}

.payment .money {
	color: #999999;
}

.payment .p-l {
	padding-left: 8rpx;
}

.payment view {
	color: #FF4701;
	font-size: 20rpx;
}

.payment-money {
	color: #1D1D1D !important;
	font-weight: bold;
}

.payment-money+view {
	font-weight: bold;
	display: flex;
	align-items: flex-end;
}

.payment view text {
	color: #FF4701;
	font-size: 26rpx;
}

.order-info {
	border-radius: 20rpx;
	margin-top: 20rpx;
	background: #ffffff;
	padding-left: 12rpx;
}

.order-info .title {
	display: inline-block;
	color: #333333;
	font-size: 28rpx;
	font-weight: bold;
	padding-left: 12rpx;
	padding-top: 22rpx;
}

.order-info view {
	margin-top: 20rpx;
	padding-left: 12rpx;
	font-size: 24rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.order-info view text {
	padding-bottom: 20rpx;
}

.payment-bottom {
	height: 98rpx;
	width: 100%;
	position: fixed;
	bottom: 0;
	display: flex;
	justify-content: flex-end;
	align-items: center;
	color: #1D1D1D;
	font-size: 28rpx;
}

.payment-bottom view {
	display: flex;
	align-items: center;
}

.payment-bottom .van-button {
	height: 72rpx;
	border-radius: 36rpx;
	margin-right: 18rpx;
	margin-left: 65rpx;
	color: #1D1D1D !important;
	font-size: 28rpx;
	padding: 0 50rpx;
	font-weight: bold;
}