.list {
	padding: 28rpx;
}

.item {
	width: 694rpx;
	height: 266rpx;
	background: #FFFFFF;
	border-radius: 24rpx;
	padding: 24rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	margin-bottom: 24rpx;
}

.item>view:last-child {
	font-size: 26rpx;
	padding-top: 24rpx;
	border-top: 2rpx solid #F3F5F7;
}

.item>view {
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.info {
	display: flex;
	flex-direction: column;
	font-size: 28rpx;
}

.info>text:first-child {
	font-size: 32rpx;
	font-weight: bold;
	padding-bottom: 10rpx;
}

.info>text:first-child text {
	font-weight: 400;
	font-size: 26rpx;
	padding-left: 16rpx;
}

.item>view:last-child view {
	display: flex;
}

.check {
	height: 32rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 32rpx;
	border: 2rpx solid #CCCCCC;
	border-radius: 50%;
	margin-right: 10rpx;
	color: #FFFFFF;
}

.check.active {
	background: linear-gradient(0deg, #EC6601, #FFDC03);
}

.btn {
	width: 750rpx;
	text-align: center;
	position: fixed;
	bottom: 0;
	padding-bottom: calc(-30rpx + env(safe-area-inset-bottom));
	background-color: #FFFFFF;
}

.bottom {
	height: calc(98rpx + env(safe-area-inset-bottom));
}

button {
	width: 694rpx !important;
	height: 80rpx !important;
	font-weight: 400 !important;
	margin: 12rpx 0;
}

.binding {
	width: 194rpx;
	height: 54rpx;
	background: linear-gradient(0deg, #EC6601, #FFDC03);
	border-radius: 27rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #FFFFFF;
	font-size: 24rpx;
font-family: PingFang SC;
font-weight: 500;
}

.popup {
	width: 600rpx !important;
	height: 300rpx !important;
	padding: 20rpx 40rpx;
}

.close {
	margin-top: 20rpx;
	text-align: end;
	color: #646464;
	margin-right: 60rpx;
}

.closes {
	margin-top: 20rpx;
	text-align: end;
	color: #0263d4;
}


.inclose {
	display: flex;
	margin-top: 40rpx;
	justify-content: flex-end;
}