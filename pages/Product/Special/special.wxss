/* pages/Productlist/list.wxss */

.list-title {
	width: 714rpx;
	height: 100rpx;
	background: #F3F5F7;
	border-radius: 20rpx;
	margin: auto;
	display: flex;
	align-items: center;
}

.l-title {
	font-size: 32rpx;
	font-family: PingFang SC;
	font-weight: bold;
	color: #1D1D1D;
}

.list-four {
	display: flex;
	margin: 0rpx 35rpx;
	margin-bottom: 24rpx;
	
}

.le-title {
	font-size: 28rpx;
font-family: PingFang SC;
font-weight: 500;
color: #666666;
margin-right: 70rpx;
}

.product-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	padding: 28rpx;
	background-color: #fff;
}

.product-item {
	width: 336rpx;
	margin-bottom: 10rpx;
	background-color: #fff;
	box-shadow: 0 0 5rpx rgba(0, 0, 0, .1);
	border-radius: 8rpx;
	overflow: hidden;
}

.info {
	display: flex;
	height: 130rpx;
	flex-direction: column;
	justify-content: space-between;
	padding: 10rpx 20rpx;
}

.info view {
	font-size: 28rpx;
	-webkit-line-clamp: 2;
}

.product-item image {
	width: 336rpx;
	height: 336rpx;
	border-radius: 8rpx 8rpx 0 0;
}

.textone {
	font-size: 24rpx;
	font-weight: 500;
	color: #ED213A;
}

.texttow {
	font-size: 34rpx;
	font-weight: 500;
}

.dflex {
	display: flex;
	justify-content: space-between;
}

.goby {
	width: 132rpx;
	height: 48rpx;
	background: #FF4701;
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: 24rpx;
	font-size: 24rpx;
	font-family: PingFang SC;
	font-weight: 500;
	color: #FFFFFF;
}